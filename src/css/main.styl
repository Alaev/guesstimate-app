.row
  &.app
    width 100%

.sidePane
  height 900px
  background-color #eee
  padding 1em

.maingraph
  height 900px
  width 100%

.sidepane
  .nodeForm
    position absolute
    top 50%
    margin-top -50%
    width 80%

.graphpane
  background-color white

.function-multiple-form
  min-height 100px

.hover
  z-index 100
  left 500px
  position absolute
  margin 0
  padding 0
  background-color rgba(180,180,180,0.1)

.nodeForm
  font-size 1.5em
  form
    .form-control
      height 2em
      border none
      background rgba(255,255,255,0.8)
      border-radius 0
      font-size 1em
      &.function-multiple-form
        height 12em
      &:focus
        background-color rgba(217,247,255,0.8)
        box-shadow none

.newButtons
  position absolute
  top 0.5em
  left 2em
  .btn-default
    background-color rgba(255,255,255, 0.6)

