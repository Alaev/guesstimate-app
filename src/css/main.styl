$icon-font-path = '../../node_modules/bootstrap-styl/fonts/'
@import '../../node_modules/bootstrap-styl/stylus/bootstrap'

.react-d3-histogram__bar rect
  fill: steelblue;
  shape-rendering: crispEdges;

.react-d3-histogram__bar text
  fill: none;

.react-d3-histogram__tick text
  font-size: 8px;

.react-d3-histogram__x-axis path, .react-d3-histogram__x-axis line
  fill: none;
  shape-rendering: crispEdges;

.react-d3-histogram
  height 100px
  margin-top -4px
  margin-left: -50px

.grid-metric
  height: 100%
  border-radius: 3px
  background-color #aaa
  
.metric
  .nav > li > a
    padding 4px 8px
  .distribution
    table
      color: #666
    h2
      font-size: 25px;
    h2.mean
      color #3782c4
      margin-bottom 0.25em
      margin-top 0.25em

    &:focus
      background blue
    h2.metric-name
      margin-top 0
      #contenteditable:focus
        outline none

.refresh-calculation
  position absolute
  top 0
  right 17px

h1
  font-size 4em

.navbar-brand
  font-size 1.5em

.repo-list
  padding 8px

.home-page
  .repo-component
    border-top 2px solid #ddd
    border-bottom 2px solid #ddd
    margin 2em 0 1em 0
    height 400px

.navbar
  margin-bottom 0

.repo-component.row
  margin-right 0
  margin-left 0
  padding-top 1em
