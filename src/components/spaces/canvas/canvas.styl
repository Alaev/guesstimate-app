.canvas-space
  padding 1em 0.5em
  background-color: white
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  ::selection
    background-color: none
  .inner-editor
    input
      text-align left
  .header
    .save-message
      color: #888
  input
    max-width 100%
    padding 0
    font-size inherit
    height 1.4em
    box-shadow none
    border-radius 0px
    border none
    &:focus
      text-align: left
      border none
      box-shadow none
      outline none
  .stdev
    margin-left 0.25em
    font-size 0.75em
    color #aaa
