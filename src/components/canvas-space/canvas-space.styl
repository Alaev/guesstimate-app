.carousel-appear
  height: 0

.carousel-appear.carousel-appear-active
  height: 200px
  transition: height 2s

.canvas-space
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  ::selection
    background-color: none
  .metric
    position relative
    height 100%
    background #ECECED
    border-radius 2px
    padding 0.5em
    font-family: Lato-Light;
    .hover
      left: 0;
      top: 100%;
      position: absolute;
      width: 100%;
      background-color: #D8D8D8;

    .row1
      margin-bottom 0.25em
    .form-group
      margin-bottom 0
    input
      padding 0
      font-size inherit
      height 1.4em
      min-height 31px
      box-shadow none
      border-radius 0px
      border none
      background-color rgba(0,0,0,0)
      border-bottom 1px solid #aaa
      &:focus
        border none
        box-shadow none
        outline none
        border-bottom 1px solid #4494E6
    &:focus
      outline none
      background-color: #D0ECFD
    .name
      font-size: 1.25em
      color: #595F6F;
    .median
      font-size: 2em
      color: #595F6F;
    .nav > li > a
      padding 4px 8px
    .distribution
      table
        color: #666
      h2
        font-size: 25px;
      h2.mean
        color #3782c4
        margin-bottom 0.25em
        margin-top 0.25em

      &:focus
        background blue
      h2.metric-name
        margin-top 0
        #contenteditable:focus
          outline none
